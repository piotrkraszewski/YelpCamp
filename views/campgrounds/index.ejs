<%- include("../partials/header") %>

<div class="container">
    <header class="jumbotron">
        <div class="containter">
            <h1>Welcome to YelpCamp</h1>
            <p>View our hand-picked campgrounds from all over the world</p>
            <p>
                <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add New Campground</a>
            </p>
        </div>
    </header>

    <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <% campgrounds.forEach(el => { %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    <img src="<%= el.image %>">
                    <div class="caption">
                        <h4><%= el.name %></h4>
                        <% if (el.rating === 0) { %>
                            <em>No reviews yet.</em>
                            <% } else { %>
                            <span class="fa fa-star checked"></span>
                            <span class="fa fa-star <% if (el.rating > 1.5) { %> checked <% } %>"></span>
                            <span class="fa fa-star <% if (el.rating > 2.5) { %> checked <% } %>"></span>
                            <span class="fa fa-star <% if (el.rating > 3.5) { %> checked <% } %>"></span>
                            <span class="fa fa-star <% if (el.rating > 4.5) { %> checked <% } %>"></span>
                            <% } %>
                    </div>
                    <p>
                        <a href="/campgrounds/<%= el._id %>" class="btn btn-primary">More info</a>    
                    </p>
                </div>
            </div>
        <% }); %>
    </div>
</div>  

<%- include("../partials/footer") %>